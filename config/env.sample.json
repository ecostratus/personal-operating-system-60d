{
  "comment": "Configuration template for personal operating system. Copy to env.json and fill in your values.",
  "system": {
    "version": "1.0",
    "environment": "development",
    "log_level": "INFO",
    "log_to_file": false,
    "log_suppress_stdout_if_jsonl": false,
    "data_directory": "./data",
    "output_directory": "./output"
  },
  "excel": {
    "system_of_record_path": "./excel-templates/system-of-record-template.xlsx",
    "dashboard_path": "./excel-templates/dashboards/60d_operating_dashboard.xlsx",
    "backup_directory": "./backups/excel",
    "auto_backup": true
  },
  "job_discovery": {
    "enabled": true,
    "sources": {
      "linkedin": {
        "enabled": false,
        "comment": "LinkedIn API access requires premium account",
        "api_key": "YOUR_LINKEDIN_API_KEY_HERE",
        "api_url": "https://api.linkedin.com/v2/jobs"
      },
      "indeed": {
        "enabled": true,
        "publisher_key": "YOUR_INDEED_PUBLISHER_KEY_HERE",
        "api_url": "https://api.indeed.com/v2/jobs"
      },
      "custom_sources": [
        {
          "name": "Example Company Careers",
          "url": "https://example.com/careers",
          "enabled": false
        }
      ]
    },
    "filters": {
      "keywords": ["software engineer", "developer", "programmer"],
      "locations": ["Remote", "San Francisco", "New York"],
      "exclude_keywords": ["unpaid", "volunteer"],
      "max_age_days": 7
    },
    "rate_limits": {
      "requests_per_minute": 10,
      "delay_between_requests_seconds": 2,
      "timeout_seconds": 10,
      "max_retries": 3,
      "backoff_base": 0.5,
      "backoff_max": 4.0,
      "jitter_ms": 100
    }
  },
  "ai_services": {
    "provider": "openai",
    "openai": {
      "api_key": "YOUR_OPENAI_API_KEY_HERE",
      "model": "gpt-4",
      "temperature": 0.7,
      "max_tokens": 2000
    },
    "azure_openai": {
      "enabled": false,
      "api_key": "YOUR_AZURE_OPENAI_KEY_HERE",
      "endpoint": "https://YOUR_RESOURCE.openai.azure.com/",
      "deployment_name": "gpt-4"
    }
  },
  "resume": {
    "master_resume_path": "./resumes/master_resume.docx",
    "tailored_resume_directory": "./resumes/tailored",
    "format": "docx",
    "backup_on_tailor": true
  },
  "outreach": {
    "platforms": {
      "linkedin": {
        "enabled": true,
        "rate_limit_per_day": 20
      },
      "email": {
        "enabled": true,
        "smtp_server": "smtp.gmail.com",
        "smtp_port": 587,
        "smtp_username": "YOUR_EMAIL@gmail.com",
        "smtp_password": "YOUR_APP_PASSWORD_HERE",
        "from_email": "YOUR_EMAIL@gmail.com"
      }
    },
    "user_context_path": "./config/outreach_context.sample.json",
    "output_directory": "./output/outreach"
  },
  "consulting": {
    "proposal_template_path": "./consulting/templates/proposal_template.docx",
    "proposal_output_directory": "./consulting/proposals",
    "hourly_rate": 150,
    "currency": "USD",
    "user_context_path": "./config/resume_context.sample.json",
    "output_directory": "./output/resume"
  },
  "github": {
    "comment": "GitHub CLI and API integration. Use 'gh auth login' to authenticate or set GITHUB_TOKEN environment variable",
    "enabled": false,
    "api_url": "https://api.github.com",
    "token": "",
    "token_comment": "Optional: Set a personal access token here or use GITHUB_TOKEN environment variable. Get token from https://github.com/settings/tokens"
  },
  "copilot_studio": {
    "comment": "Copilot Studio integration requires Microsoft 365 account",
    "tenant_id": "YOUR_TENANT_ID",
    "client_id": "YOUR_CLIENT_ID",
    "client_secret": "YOUR_CLIENT_SECRET"
  },
  "notifications": {
    "enabled": true,
    "channels": {
      "email": {
        "enabled": true,
        "to_address": "YOUR_EMAIL@example.com"
      },
      "teams": {
        "enabled": false,
        "webhook_url": "YOUR_TEAMS_WEBHOOK_URL"
      },
      "slack": {
        "enabled": false,
        "webhook_url": "YOUR_SLACK_WEBHOOK_URL"
      }
    },
    "notify_on": {
      "high_priority_jobs": true,
      "application_responses": true,
      "interview_scheduled": true,
      "script_errors": true
    }
  },
  "scoring": {
    "comment": "Phase 3A enrichment+scoring uses normalized [0,1] scores and buckets by thresholds.",
    "weights": {
      "role_fit": 0.40,
      "stack": 0.40,
      "remote": 0.20,
      "comment": "Weights are proportions; sum can be 1.0 but does not need to be. Keys used by Phase 3A: role_fit, stack, remote."
    },
    "thresholds": {
      "exceptional": 0.85,
      "strong": 0.70,
      "moderate": 0.50,
      "weak": 0.0,
      "comment": "Thresholds in [0,1]; bucket_score evaluates exceptional→strong→moderate→weak."
    },
    "examples": {
      "phase3A": {
        "weights": { "role_fit": 0.5, "stack": 0.3, "remote": 0.2 },
        "thresholds": { "exceptional": 0.85, "strong": 0.7, "moderate": 0.5 }
      }
    }
  },
  "automation": {
    "job_scraper_schedule": "daily",
    "job_scraper_time": "08:00",
    "weekly_review_day": "Friday",
    "weekly_review_time": "16:00",
    "auto_score_jobs": true,
    "require_manual_approval": true
  },
  "privacy": {
    "anonymize_company_names": false,
    "encrypt_sensitive_data": false,
    "data_retention_days": 365
  },
  "preferences": {
    "remote_preference": "remote",
    "desired_salary_min": 100000,
    "desired_salary_max": 150000,
    "target_industries": ["Technology", "Finance", "Healthcare"],
    "target_company_sizes": ["medium", "large"],
    "willing_to_relocate": false
  },
  "NEW_SOURCE_ENABLED": false,
  "NEW_SOURCE_API_URL": "",
  "NEW_SOURCE_API_KEY": ""
  ,
  "LEVER_ENABLED": false,
  "LEVER_API_URL": "",
  "GREENHOUSE_ENABLED": false,
  "GREENHOUSE_API_URL": "",
  "GREENHOUSE_API_KEY": "",
  "ASHBY_ENABLED": false,
  "ASHBY_API_URL": "",
  "ASHBY_API_KEY": "",
  "INDEED_ENABLED": false,
  "INDEED_API_URL": "",
  "INDEED_API_KEY": ""
  ,
  "ZIPRECRUITER_ENABLED": false,
  "ZIPRECRUITER_API_URL": "",
  "ZIPRECRUITER_API_KEY": "",
  "GOOGLEJOBS_ENABLED": false,
  "GOOGLEJOBS_API_URL": "",
  "GOOGLEJOBS_API_KEY": "",
  "GLASSDOOR_ENABLED": false,
  "GLASSDOOR_API_URL": "",
  "GLASSDOOR_API_KEY": "",
  "CRAIGSLIST_ENABLED": false,
  "CRAIGSLIST_API_URL": "",
  "GOREMOTE_ENABLED": false,
  "GOREMOTE_API_URL": "",
  "ENRICHMENT_ENABLED": true
}
