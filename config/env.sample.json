{
  "comment": "Configuration template for personal operating system. Copy to env.json and fill in your values.",
  "system": {
    "version": "1.0",
    "environment": "development",
    "log_level": "INFO",
    "data_directory": "./data",
    "output_directory": "./output"
  },
  "excel": {
    "system_of_record_path": "./excel-templates/system-of-record-template.xlsx",
    "dashboard_path": "./excel-templates/dashboards/60d_operating_dashboard.xlsx",
    "backup_directory": "./backups/excel",
    "auto_backup": true
  },
  "job_discovery": {
    "enabled": true,
    "sources": {
      "linkedin": {
        "enabled": false,
        "comment": "LinkedIn API access requires premium account",
        "api_key": "YOUR_LINKEDIN_API_KEY_HERE"
      },
      "indeed": {
        "enabled": true,
        "publisher_key": "YOUR_INDEED_PUBLISHER_KEY_HERE"
      },
      "custom_sources": [
        {
          "name": "Example Company Careers",
          "url": "https://example.com/careers",
          "enabled": false
        }
      ]
    },
    "filters": {
      "keywords": ["software engineer", "developer", "programmer"],
      "locations": ["Remote", "San Francisco", "New York"],
      "exclude_keywords": ["unpaid", "volunteer"],
      "max_age_days": 7
    },
    "rate_limits": {
      "requests_per_minute": 10,
      "delay_between_requests_seconds": 2
    }
  },
  "ai_services": {
    "provider": "openai",
    "openai": {
      "api_key": "YOUR_OPENAI_API_KEY_HERE",
      "model": "gpt-4",
      "temperature": 0.7,
      "max_tokens": 2000
    },
    "azure_openai": {
      "enabled": false,
      "api_key": "YOUR_AZURE_OPENAI_KEY_HERE",
      "endpoint": "https://YOUR_RESOURCE.openai.azure.com/",
      "deployment_name": "gpt-4"
    }
  },
  "resume": {
    "master_resume_path": "./resumes/master_resume.docx",
    "tailored_resume_directory": "./resumes/tailored",
    "format": "docx",
    "backup_on_tailor": true
  },
  "outreach": {
    "platforms": {
      "linkedin": {
        "enabled": true,
        "rate_limit_per_day": 20
      },
      "email": {
        "enabled": true,
        "smtp_server": "smtp.gmail.com",
        "smtp_port": 587,
        "smtp_username": "YOUR_EMAIL@gmail.com",
        "smtp_password": "YOUR_APP_PASSWORD_HERE",
        "from_email": "YOUR_EMAIL@gmail.com"
      }
    }
  },
  "consulting": {
    "proposal_template_path": "./consulting/templates/proposal_template.docx",
    "proposal_output_directory": "./consulting/proposals",
    "hourly_rate": 150,
    "currency": "USD"
  },
  "copilot_studio": {
    "enabled": false,
    "comment": "Copilot Studio integration requires Microsoft 365 account",
    "tenant_id": "YOUR_TENANT_ID",
    "client_id": "YOUR_CLIENT_ID",
    "client_secret": "YOUR_CLIENT_SECRET"
  },
  "notifications": {
    "enabled": true,
    "channels": {
      "email": {
        "enabled": true,
        "to_address": "YOUR_EMAIL@example.com"
      },
      "teams": {
        "enabled": false,
        "webhook_url": "YOUR_TEAMS_WEBHOOK_URL"
      },
      "slack": {
        "enabled": false,
        "webhook_url": "YOUR_SLACK_WEBHOOK_URL"
      }
    },
    "notify_on": {
      "high_priority_jobs": true,
      "application_responses": true,
      "interview_scheduled": true,
      "script_errors": true
    }
  },
  "scoring": {
    "weights": {
      "role_fit": 0.35,
      "company_fit": 0.20,
      "compensation": 0.20,
      "location": 0.15,
      "growth": 0.10
    },
    "thresholds": {
      "exceptional": 9.0,
      "strong": 7.0,
      "moderate": 5.0,
      "weak": 3.0
    }
  },
  "automation": {
    "job_scraper_schedule": "daily",
    "job_scraper_time": "08:00",
    "weekly_review_day": "Friday",
    "weekly_review_time": "16:00",
    "auto_score_jobs": true,
    "require_manual_approval": true
  },
  "privacy": {
    "anonymize_company_names": false,
    "encrypt_sensitive_data": false,
    "data_retention_days": 365
  },
  "preferences": {
    "remote_preference": "remote",
    "desired_salary_min": 100000,
    "desired_salary_max": 150000,
    "target_industries": ["Technology", "Finance", "Healthcare"],
    "target_company_sizes": ["medium", "large"],
    "willing_to_relocate": false
  }
}
